[sub_resource type="GDScript" id="GDScript_6ym8x"]
script/source = "extends ScrollContainer

signal selected(opt_id)

@onready
var opt_buttons : Array = [
	$VBoxContainer/Opt0,
	$VBoxContainer/Opt1,
	$VBoxContainer/Opt2,
	$VBoxContainer/Opt3,
]

func _ready():
	visible = false
	for btn in opt_buttons:
		btn.text = \"\"

func show_options(opts : Array[DialogueResponse]):
	for idx in len(opts):
		opt_buttons[idx].text = opts[idx].text
	visible = len(opts) > 0
	
func select(idx: int):
	visible = false
	selected.emit(idx)

func _on_opt_0_pressed():
	select(0)

func _on_opt_1_pressed():
	select(1)

func _on_opt_2_pressed():
	select(2)

func _on_opt_3_pressed():
	select(3)
"

